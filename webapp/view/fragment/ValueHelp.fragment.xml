<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <TableSelectDialog confirm=".onCloseDialog" cancel=".onCloseDialog" title="{i18n>selectCustomer}" items="{/customerList}" search=".handleSearch">
        <ColumnListItem selected="{selected}">
            <cells>
                <Text text="{custId}" />
                <ObjectIdentifier title="{customerName}" />
                <Text text="{email}" />
                <Text text="{mobile}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column>
                <header>
                    <Text text="{i18n>customers}" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="{i18n>customerName}" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Email" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="{i18n>mobile}" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
