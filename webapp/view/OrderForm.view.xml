<mvc:View controllerName="task.shanita.controller.Master" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:m="sap.m" height="100%">
    <FlexBox alignItems="End" justifyContent="End">
        <items>
            <Button id="cancel_button" icon="sap-icon://decline" type="Accept" press="onCancelClick" />
        </items>
    </FlexBox>
    <f:SimpleForm id="create_simpleform" editable="true" layout="ResponsiveGridLayout" title="Add Order">
        <f:content>
            <Label id="app_label_customerid" text="Order No" labelFor="app_input_customerid" />
            <Input id="app_input_customerid" value="{/customerid}" />

            <Label text="Customer Name" />
            <Label text="Customer Name" labelFor="multiInput" />
            <MultiInput id="multiInput" valueHelpRequest=".onOpenDialog" suggestionRows="{
				path: '/ZSALESREPORT',
				length: 10
			}">
                <suggestionColumns>
                    <Column>
                        <Label text="Product Code" />
                    </Column>
                    <Column>
                        <Label text="Product Name" />
                    </Column>
                </suggestionColumns>
                <suggestionRows>
                    <ColumnListItem>
                        <Label text="{ProductCode}" />
                        <Label text="{ProductName}" />
                    </ColumnListItem>
                </suggestionRows>
            </MultiInput>

            <Label id="app_label_country" text="Country" labelFor="app_select_gender" />
            <Select id="app_selec_country" selectedKey="{/gender}" items="{genderModel>/genders}">
                <items>
                    <core:Item key="{genderModel>}" text="{= ${genderModel>}==='male' ?${i18n>male} : ${i18n>female}}" />
                </items>
            </Select>

            <Label id="app_label_gender" text="City" labelFor="app_select_gender" />
            <Select id="app_select_gender" selectedKey="{/gender}" items="{genderModel>/genders}">
                <items>
                    <core:Item key="{genderModel>}" text="{= ${genderModel>}==='male' ?${i18n>male} : ${i18n>female}}" />
                </items>
            </Select>

            <Label id="app_label_email" text="Date" labelFor="app_input_email" />

            <DatePicker id="DP1" placeholder="Enter Date" change="handleChange" class="sapUiSmallMarginBottom" />
        </f:content>
    </f:SimpleForm>
</mvc:View>
